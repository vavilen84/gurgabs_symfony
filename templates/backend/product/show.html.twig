{% extends 'backend.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('backend_product_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('backend_product_edit', {'id': product.id}) }}">edit</a>

    <div class="pt20">
        {{ include('backend/product/_delete_form.html.twig') }}
    </div>
{% endblock %}
