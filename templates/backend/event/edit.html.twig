{% extends 'base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
    <h1>Edit Event</h1>

    {{ include('backend/event/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('backend_event_index') }}" class="btn btn-primary">back to list</a>

    <div class="pt20">
        {{ include('backend/event/_delete_form.html.twig') }}
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/datepicker/jquery.datetimepicker.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#event_eventDate').datetimepicker({ formatDate:'d.m.Y'});
        });
    </script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('js/datepicker/jquery.datetimepicker.css') }}">
{% endblock %}