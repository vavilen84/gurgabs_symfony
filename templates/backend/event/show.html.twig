{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Event Date</th>
                <td>{{ event.eventDate | date("m/d/Y")}}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ event.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backend_event_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('backend_event_edit', {'id': event.id}) }}" class="btn btn-primary">edit</a>

    <div class="pt20">
        {{ include('backend/event/_delete_form.html.twig') }}
    </div>
{% endblock %}
