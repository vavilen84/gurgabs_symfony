{% extends 'base.html.twig' %}

{% block title %}File index{% endblock %}

{% block body %}
    <h1>File index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Original_name</th>
                <th>Ext</th>
                <th>File</th>
                <th>Description</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for file in files %}
            <tr>
                <td>{{ file.id }}</td>
                <td>{{ file.originalName }}</td>
                <td>{{ file.ext }}</td>
                <td>{{ file.file }}</td>
                <td>{{ file.description }}</td>
                <td>{{ file.type }}</td>
                <td>
                    <a href="{{ path('backend_file_show', {'id': file.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('backend_file_edit', {'id': file.id}) }}" class="btn btn-primary">edit</a>
                    <div class="list-remove-btn">
                        {{ include('backend/file/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backend_file_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
